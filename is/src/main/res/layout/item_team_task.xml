<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
        android:background="@drawable/solid_white_no_border"
        android:gravity="center_vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/row1"
            style="@style/LinearLayout_horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_project_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="王屠"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font"
                android:textStyle="bold" />

            <TextView
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_yellow_radius"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="已提交"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/row2"
            style="@style/LinearLayout_horizontal"
            android:layout_below="@id/row1"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="辽宁省沈阳市和平区三好街80-1号"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/row3"
            style="@style/LinearLayout_horizontal"
            android:layout_below="@id/row2"
            android:paddingBottom="4dp">

            <TextView
                android:id="@+id/tv_qms_logistics"
                style="@style/TextView"
                android:layout_width="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_main_radius"
                android:gravity="center_horizontal"
                android:text="跟 踪"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_evaluate"
                style="@style/TextView"
                android:layout_width="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@id/tv_qms_logistics"
                android:background="@drawable/bg_round_border"
                android:gravity="center_horizontal"
                android:text="评 价"
                android:textColor="@color/main"
                android:textSize="14sp" />
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>