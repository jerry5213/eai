<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/solid_white_no_border"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_civil_review_a"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="150dp"
            android:text="易购大厦项目"
            android:gravity="bottom|center_vertical"
            android:textColor="@color/default_text_black_color"
            android:textSize="@dimen/small_font"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/item_civil_review_b"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="L1"
            android:gravity="bottom|center_vertical"
            android:textColor="@color/default_text_black_color"
            android:textSize="@dimen/small_font"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_civil_review_c"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="top|center_vertical"
        android:text="2018/04/18"
        android:textColor="@color/default_text_grey_color"
        android:textSize="10sp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"/>
    <com.zxtech.is.widget.IconFontTextView
        android:id="@+id/item_civil_review_enter"
        android:layout_alignParentRight="true"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/icon_qianjin"
        android:textSize="@dimen/middle_font"
        android:layout_marginRight="20dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/item_civil_review_enter"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginRight="3dp">
        <TextView
            android:id="@+id/item_civil_review_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="用户名"
            android:textColor="@color/default_text_grey_color"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>
        <TextView
            android:id="@+id/item_civil_review_e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="审核中"
            android:textColor="@color/default_text_grey_color"
            android:textSize="10sp"
            android:layout_centerVertical="true"
            android:visibility="visible"/>

    </LinearLayout>
    <View
        android:id="@+id/civil_review_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>