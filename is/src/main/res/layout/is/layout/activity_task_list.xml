<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_grey"/>

    <ScrollView
        style="@style/ScrollView">
        <LinearLayout
            style="@style/LinearLayout_vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/pm"/>
                    <TextView
                        style="@style/TextView"
                        android:layout_marginLeft="7dp"
                        android:text="@string/is_project_info"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold"/>
                </LinearLayout>

                <com.zxtech.is.widget.IconFontTextView
                    android:id="@+id/tv_open_project_info"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center|right"
                    android:text="@string/icon_zhe_die_close"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="20dp" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/is_project_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/solid_white_no_border"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_project_name"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_is_project_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#969696"
                        android:text=""
                        android:layout_weight="9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_project_address"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/is_project_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#969696"
                        android:text=""
                        android:layout_weight="9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_agency"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/tv_is_agent_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#969696"
                        android:text=""
                        android:layout_weight="9"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_product_units"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp"
                        android:layout_weight="2"/>
                    <TextView
                        android:id="@+id/is_product_units"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="#969696"
                        android:text=""
                        android:layout_weight="9"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:background="@color/line" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingLeft="10dp">
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/is_file_orange"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:textSize="@dimen/sp_15"
                    android:textStyle="bold"
                    android:text="@string/is_project_attach"/>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/solid_white_no_border">

                <ImageView
                    android:id="@+id/iv_is_add_img"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@mipmap/qms_add_img"
                    android:layout_marginTop="10dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_is_project_attach"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginLeft="10dp"
                    tools:listitem="@layout/item_img_common"
                    android:scrollbars="horizontal">
                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:id="@+id/cb_is_checkall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:button="@drawable/is_checkbox_style"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="@string/is_check_all"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    >
                    <LinearLayout
                        android:id="@+id/is_btn_install_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/is_button_blue_radius">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/is_address_white"/>
                        <TextView
                            android:id="@+id/tv_edit_install_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingRight="5dp"
                            android:text="@string/is_install_address"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/is_btn_delivery_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/is_button_grass_green_radius">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/is_address_white"/>
                        <TextView
                            android:id="@+id/tv_edit_delivery_address"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingRight="5dp"
                            android:text="@string/is_delivery_address"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/is_btn_contact_address"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:background="@drawable/button_yellow_radius">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:paddingLeft="5dp"
                            android:src="@drawable/is_contact_white"/>
                        <TextView
                            android:id="@+id/tv_edit_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:paddingRight="5dp"
                            android:text="@string/is_contact"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_is_elevator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    >
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
