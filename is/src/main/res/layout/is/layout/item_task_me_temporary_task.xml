<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_white_no_border"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/item_task_me_temporary_task_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/item_task_me_temporary_task_type"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="top|center_vertical"
                        android:text="@string/is_temporary_task_type"
                        android:textColor="@color/black_28"
                        android:textSize="@dimen/middle_font"
                        android:textStyle = "bold"
                        android:layout_marginLeft="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/item_task_me_temporary_task_project"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/is_project_name"
                        android:gravity="bottom|center_vertical"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/small_font"
                        android:textStyle="bold"
                        android:layout_marginLeft="20dp"/>
                    <TextView
                        android:id="@+id/item_task_me_temporary_task_elevator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="L1"
                        android:gravity="bottom|center_vertical"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/small_font"
                        android:textStyle="bold"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="top|center_vertical"
                        android:text="@string/is_temporary_task_start_data"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/small_font"
                        android:layout_marginLeft="20dp"
                        android:layout_alignParentBottom="true"/>
                    <TextView
                        android:id="@+id/item_task_me_temporary_task_date"
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:gravity="top|center_vertical"
                        android:text="ï¼š2018/04/18"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/small_font"
                        android:layout_alignParentBottom="true"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/item_task_me_temporary_task_btn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:background="@drawable/is_shape_corner"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_temporary_task_type_execute_task"
                        android:textColor="@color/grass_green"
                        android:textSize="@dimen/middle_font"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
