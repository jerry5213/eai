<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_20"
        android:paddingTop="@dimen/dp_10"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/is_iwr_red" />

        <TextView
            android:layout_toRightOf="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="@string/is_insta_way_records"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold" />

        <Button
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_20"
            android:id="@+id/is_cancel"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/solid_red_no_border"
            android:gravity="center"
            android:text="@string/is_cancel"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font"
            android:visibility="gone" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/solid_white_no_border"
        android:orientation="vertical"
        android:padding="@dimen/dp_10"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="wrap_content"
                android:text="@string/is_selected_elevator"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/sp_14" />
            <TextView
                android:id="@+id/is_selected_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="wrap_content"
                android:text="@string/is_insta_way"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/is_insta_way"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/solid_white_border"
                android:drawableRight="@drawable/down"
                android:hint="请选择"
                android:padding="5dp"
                android:textColorHint="@color/default_text_grey_color"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_3"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/dp_72"
                android:layout_height="wrap_content"
                android:text="@string/is_scaffolding"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/is_scaffolding"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/solid_white_border"
                android:drawableRight="@drawable/down"
                android:hint="请选择"
                android:padding="5dp"
                android:textColorHint="@color/default_text_grey_color"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/is_team_6"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <Button
            android:id="@+id/is_confirm"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="@drawable/solid_red_no_border"
            android:gravity="center"
            android:text="@string/is_report"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />

        <Button
            android:id="@+id/is_abolished"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="4"
            android:background="@drawable/solid_grey_border"
            android:gravity="center"
            android:text="@string/is_abolished"
            android:textColor="@color/white"
            android:textSize="@dimen/large_font" />
    </LinearLayout>


</LinearLayout>