<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_grey"/>

    <ScrollView
        style="@style/ScrollView">
        <LinearLayout
            style="@style/LinearLayout_vertical">
            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/is_image_temporary_task_project"/>
                    <TextView
                        style="@style/TextView"
                        android:layout_marginLeft="7dp"
                        android:text="@string/is_elevator_info"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="@dimen/large_font"
                        android:textStyle="bold"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_proc_info"
                    style="@style/TextView"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:text="@string/is_proc_info"
                    android:textColor="@color/main"
                    android:textSize="@dimen/large_font"
                    android:textStyle="bold" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:background="@drawable/solid_white_no_border"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_plan3CDate"
                        android:textSize="13sp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tv_is_plan3CDate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_moneyS2Date"
                        android:textSize="13sp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tv_is_moneyS2Date"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/is_moeny3CDate"
                        android:textSize="13sp"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/tv_is_moeny3CDate"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:text=""
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_wellholeItem"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/wellholeItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="入场通道"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/enterItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_yardItem"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/yardItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_installTemItem"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/installTemItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_storehouseItem"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/storehouseItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/is_constructionItem"
                        android:textSize="13sp"
                        />

                    <TextView
                        android:id="@+id/constructionItem_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/left_8"
                        android:layout_marginLeft="@dimen/left_8"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center_vertical"
                        android:padding="5dp"
                        android:textColor="@color/default_text_grey_color"
                        android:textSize="@dimen/large_font"
                        />
                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/activity_task_elevator_detail_review_common"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
