<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    android:orientation="vertical">
    <LinearLayout
        style="@style/LinearLayout_vertical"
        android:layout_height="match_parent"
        android:background="@color/color_background_all_gray">
        <include layout="@layout/common_toolbar" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_grey" />
        <ScrollView style="@style/ScrollView">
            <LinearLayout
                style="@style/LinearLayout_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="2dp" />
                <LinearLayout
                    android:id="@+id/add_person_content_a"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/basic_information" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/is_basic_info"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_b"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/solid_white_no_border"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.618"
                        android:orientation="vertical">

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <ImageView
                            android:id="@+id/team_add_person_iv"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="4"
                            android:background="@mipmap/qms_add_img"
                            android:scaleType="fitXY" />

                        <Space
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="10dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/is_button_grass_green_radius"
                                android:text="拍照"
                                android:textColor="@color/white" />

                            <Button
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="2dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/is_button_blue_radius"
                                android:text="上传"
                                android:textColor="@color/white" />

                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp">
                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/is_name"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>

                            <EditText
                                android:id="@+id/team_add_person_name"
                                android:paddingLeft="5dp"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="2"
                                android:background="@drawable/solid_white_border"
                                android:textSize="@dimen/small_font"
                                android:singleLine="true"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/is_telephone"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>
                            <EditText
                                android:id="@+id/team_add_person_phone"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="2"
                                android:background="@drawable/solid_white_border"
                                android:layout_marginRight="5dp"
                                android:inputType="number"
                                android:singleLine="true"
                                android:textSize="@dimen/small_font"
                                android:paddingLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp"
                            android:visibility="gone">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="职位"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>
                            <TextView
                                android:id="@+id/team_add_person_position"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:background="@drawable/solid_black_border"
                                android:drawableRight="@drawable/down"
                                android:paddingRight="5dp"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/small_font"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="10dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/is_idcard_no"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>
                            <EditText
                                android:id="@+id/team_add_person_id"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="2"
                                android:background="@drawable/solid_white_border"
                                android:layout_marginRight="5dp"
                                android:textSize="@dimen/small_font"
                                android:singleLine="true"
                                android:paddingLeft="5dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/is_licesese_card"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>
                            <TextView
                                android:id="@+id/team_add_person_a"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="2"
                                android:background="@drawable/solid_white_border"
                                android:layout_marginRight="5dp"
                                android:drawableRight="@drawable/down"
                                android:paddingRight="5dp"
                                android:gravity="center_vertical|center_horizontal"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:orientation="horizontal"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:layout_marginBottom="5dp">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/is_tzlicesese_card"
                                android:gravity="center_vertical|right"
                                android:layout_marginRight="5dp"/>
                            <TextView
                                android:id="@+id/team_add_person_b"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="2"
                                android:background="@drawable/solid_white_border"
                                android:layout_marginRight="5dp"
                                android:drawableRight="@drawable/down"
                                android:paddingRight="5dp"
                                android:gravity="center_vertical|center_horizontal"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_c"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:visibility="gone">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/id_infomation" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="证件信息"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_d"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/solid_white_no_border"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:visibility="gone">
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_e"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/id_infomation" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="合作方信息"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/solid_white_no_border"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.618"
                            android:text="@string/is_partner"
                            android:gravity="center_vertical|left"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:id="@+id/team_add_person_c"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/solid_white_border"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/down"
                            android:paddingRight="5dp"
                            android:gravity="center_vertical|center_horizontal"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.618"
                            android:text="@string/is_branch"
                            android:gravity="center_vertical|left"
                            android:layout_marginLeft="20dp"/>
                        <TextView
                            android:id="@+id/team_add_person_d"
                            android:layout_width="0dp"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:background="@drawable/solid_white_border"
                            android:layout_marginRight="5dp"
                            android:drawableRight="@drawable/down"
                            android:paddingRight="5dp"
                            android:gravity="center_vertical|center_horizontal"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/add_person_content_g"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/signature" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="@string/is_signature"
                        android:paddingTop="3dp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/solid_white_no_border"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/team_add_person_sign"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@drawable/solid_black_border"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"/>
                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="70dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/main_grey">

        <Button
            android:id="@+id/team_add_person_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/is_button_yellow_radius"
            android:text="@string/is_setup"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/team_add_person_blacklist"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/is_add_black_list"
            android:textColor="@color/white"
            android:background="@drawable/button_main_radius"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/team_add_person_member"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/is_add_team_member"
            android:textColor="@color/white"
            android:background="@drawable/is_button_blue_radius"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</RelativeLayout>

