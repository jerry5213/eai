<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center_horizontal|center_vertical"
    android:background="@color/main_grey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/id_infomation" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/is_project_info"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:background="@drawable/solid_white_no_border"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/left_8"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="@string/is_project_name"
            android:textColor="@color/black_28"
            android:textSize="@dimen/large_font" />
        <TextView
            android:id="@+id/team_add_member_prj"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/left_8"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/solid_white_border"
            android:drawableRight="@drawable/down"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/default_text_grey_color"
            android:textSize="@dimen/large_font" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_install" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/is_ela_info"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"
        android:background="@drawable/solid_white_no_border"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/left_8"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:text="@string/is_ela_name"
            android:textColor="@color/black_28"
            android:textSize="@dimen/large_font" />
        <TextView
            android:id="@+id/team_add_member_ela"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginRight="@dimen/left_8"
            android:layout_weight="1"
            android:clickable="true"
            android:background="@drawable/solid_white_border"
            android:drawableRight="@drawable/down"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textColor="@color/default_text_grey_color"
            android:textSize="@dimen/large_font" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/team_add_member_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/white"
            android:background="@drawable/solid_grey_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/team_add_member_submit"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="新增班组成员"
            android:textColor="@color/white"
            android:background="@drawable/button_main_radius"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>


</LinearLayout>
