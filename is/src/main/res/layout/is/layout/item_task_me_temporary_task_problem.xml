<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/solid_white_no_border"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_task_me_temporary_task_temporary_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_task_me_temporary_task_temporary_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top|center_vertical"
                android:text="@string/is_temporary_task_type"
                android:textColor="@color/black_28"
                android:textSize="@dimen/small_font"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_task_me_temporary_task_temporary_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/is_name"
                android:textColor="@color/default_text_grey_color"
                android:textSize="@dimen/small_font"
                android:textStyle="bold"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/item_task_me_temporary_task_temporary_date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2018/04/17"
                android:textColor="@color/default_text_grey_color"
                android:textSize="@dimen/small_font"
                android:textStyle="bold"
                android:layout_marginLeft="5dp"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="right">
                <TextView
                    android:id="@+id/item_task_me_temporary_task_temporary_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/is_temporary_task_assign"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/small_font"
                    android:textStyle="bold"
                    android:layout_marginRight="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </LinearLayout>
</LinearLayout>
