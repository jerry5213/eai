<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/is_process_information"
        android:textColor="@color/dark_red"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone"
        />
    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/task_me_list_a"
                    style="@style/TextView"
                    android:background="@drawable/circle_selector_dark_red"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@drawable/circle_selector_text_dark_red"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/task_me_list_b"
                    style="@style/TextView"
                    android:background="@drawable/circle_selector_purple"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:clickable="true"
                    android:focusable="true"
                    android:textColor="@drawable/circle_selector_text_purple"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/task_me_list_c"
                    style="@style/TextView"
                    android:background="@drawable/circle_selector_light_blue"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@drawable/circle_selector_text_light_blue"
                    android:clickable="true"
                    android:focusable="true"
                    android:textSize="14sp"/>
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/task_me_list_d"
                    style="@style/TextView"
                    android:background="@drawable/circle_selector_yellow"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@drawable/circle_selector_text_yellow"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/line"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    android:id="@+id/task_me_list_e"
                    style="@style/TextView"
                    android:layout_height="match_parent"
                    android:background="@drawable/circle_selector_grass_green"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@drawable/circle_selector_text_grass_green"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="0dp"
                android:layout_height="1px"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="2"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">

                <TextView
                    style="@style/TextView"
                    android:id="@+id/task_me_list_f"
                    android:background="@drawable/circle_selector_green"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="0"
                    android:textColor="@drawable/circle_selector_text_green"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_start_confirm"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_civil_review"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_production_shipment"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_site_found"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="10sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal"
                android:visibility="gone">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_temporary_assignment"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical|center_horizontal">

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical|center_horizontal">
                <TextView
                    style="@style/TextView"
                    android:text="@string/is_installation_inter"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:background="@color/line" />

    <FrameLayout
        android:id="@+id/task_me_list_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>

</LinearLayout>