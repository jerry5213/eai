<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/id_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:text="@string/is_time_limit"
        android:textColor="@color/black_28"
        android:textIsSelectable="true"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/sch_manager_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="2dp"
        android:layout_below="@id/id_tv1"
        android:text=""
        android:textColor="@color/default_text_grey_color"
        android:textIsSelectable="true"
        android:textSize="14sp" />

    <!-- 左边 -->
    <LinearLayout
        android:id="@+id/time_list_date"
        android:layout_width="wrap_content"
        android:paddingLeft="5dp"
        android:layout_height="120dp"
        android:layout_toRightOf="@+id/id_tv1"
        android:orientation="vertical">
        <!-- 圆点 -->
        <ImageView
            android:id="@+id/time_list_node"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/express_point_old"
            android:visibility="visible"/>
        <!-- 圆点 -->
        <ImageView
            android:id="@+id/time_list_node_green"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/express_point_green"
            android:visibility="gone"/>


        <!-- 竖线 -->
        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@color/line" />
    </LinearLayout>
    <!-- 右边 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/id_tv1"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/time_list_node_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="2dp"
                android:text=""
                android:textColor="@color/black_28"
                android:textIsSelectable="true"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_list_node_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:lineSpacingExtra="2dp"
                android:text=""
                android:textColor="@color/default_text_grey_color"
                android:textIsSelectable="true"
                android:textSize="13sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qms_express_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/is_transactor_name"
                    android:textColor="@color/black_28"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_list_node_tranname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:textColor="@color/default_text_grey_color"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_qms_express"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qms_express_personc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/is_approver_name"
                    android:textColor="@color/black_28"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_list_node_apprname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:textColor="@color/default_text_grey_color"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qms_express_person76"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/is_plan_start_date"
                    android:textColor="@color/black_28"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_list_planstartdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:textColor="@color/default_text_grey_color"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qms_express_personc9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/is_plan_finish_date"
                    android:textColor="@color/black_28"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_list_planfinishdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:textColor="@color/default_text_grey_color"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_qms_express_person7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text="@string/is_actual_finish_date"
                    android:textColor="@color/black_28"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/time_list_actualtartdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="2dp"
                    android:text=""
                    android:textColor="@color/default_text_grey_color"
                    android:textIsSelectable="true"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"></LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>