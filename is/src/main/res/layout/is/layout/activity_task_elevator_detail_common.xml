<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_grey"/>

    <LinearLayout
        style="@style/LinearLayout_vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/is_file_orange"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"
                android:text="@string/is_elevator_attach"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:background="@drawable/solid_white_no_border">

            <ImageView
                android:id="@+id/iv_is_add_img"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@mipmap/qms_add_img"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_is_elevator_attach"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                tools:listitem="@layout/item_img_common">
            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/is_address_green"/>
            <TextView
                style="@style/TextView"
                android:layout_marginLeft="7dp"
                android:text="@string/is_delivery_address"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp"
            android:orientation="vertical"
            android:background="@drawable/solid_white_no_border"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/province_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left_8"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />

                <TextView
                    android:id="@+id/city_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left_8"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />

                <TextView
                    android:id="@+id/area_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/et_is_other_address"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/solid_white_border"
                android:textColor="@color/default_text_black_color"
                android:textSize="12sp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/is_address_blue"/>
            <TextView
                style="@style/TextView"
                android:layout_marginLeft="7dp"
                android:text="@string/is_install_address"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"/>
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/solid_white_no_border"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/install_province_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left_8"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />

                <TextView
                    android:id="@+id/install_city_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/left_8"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />

                <TextView
                    android:id="@+id/install_area_selector"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:background="@drawable/solid_white_border"
                    android:drawableRight="@drawable/down"
                    android:gravity="center_vertical"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/large_font"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/install_et_is_other_address"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/solid_white_border"
                android:textColor="@color/default_text_black_color"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10">

            <ImageView
                android:id="@+id/iv_is_address_img"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/is_contact_orange"/>
            <TextView
                android:id="@+id/tv_is_contact_txt"
                android:layout_toRightOf="@+id/iv_is_address_img"
                style="@style/TextView"
                android:layout_marginLeft="7dp"
                android:text="@string/is_contact"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/large_font"
                android:textStyle="bold"/>

            <ImageView
                android:layout_toLeftOf="@+id/iv_is_minus"
                android:id="@+id/iv_is_add"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/is_add_orange"/>
            <ImageView
                android:id="@+id/iv_is_minus"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:src="@drawable/is_minus_grey"/>
        </RelativeLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:id="@+id/rv_is_contact_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:background="@drawable/solid_white_no_border"
            android:scrollbars="vertical">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_is_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                tools:listitem="@layout/item_contact"
                >
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
