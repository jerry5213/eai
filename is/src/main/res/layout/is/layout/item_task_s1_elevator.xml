<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_vertical"
    android:layout_marginTop="5dp"
    android:background="@drawable/solid_white_no_border"
    android:padding="10dp">

    <LinearLayout
        style="@style/LinearLayout_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="2">

            <TextView
                style="@style/TextView"
                android:layout_width="70dp"
                android:text="梯号："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_is_elevator_no"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="3">

            <TextView
                style="@style/TextView"
                android:layout_width="70dp"
                android:gravity="center_horizontal"
                android:text="产品编号："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_is_elevator_code"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="2">

            <TextView
                style="@style/TextView"
                android:layout_width="70dp"
                android:text="梯号："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_qms_elevator_source"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/solid_white_border"
                android:textColor="@color/default_text_black_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="3">

            <TextView
                style="@style/TextView"
                android:layout_width="70dp"
                android:gravity="center_horizontal"
                android:text="产品编号："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_open_box_time"
                style="@style/TextView"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_border"
                android:gravity="center_vertical"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>