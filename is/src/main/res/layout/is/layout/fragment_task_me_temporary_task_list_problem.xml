<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:id="@+id/temporary_task_problem_all_btn"
                    android:background="@drawable/is_temporary_task_problem_all"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/is_temporary_task_problem_all"
                    android:textColor="@drawable/is_temporary_task_problem_text_all"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:id="@+id/temporary_task_problem_aqjc_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/is_temporary_task_problem_aqjc"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/is_security_check"
                    android:textColor="@drawable/is_temporary_task_problem_text_aqjc"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:id="@+id/temporary_task_problem_zljc_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/is_temporary_task_problem_zljc"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/is_quality_check"
                    android:textColor="@drawable/is_temporary_task_problem_text_zljc"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:id="@+id/temporary_task_problem_ryyz_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/is_temporary_task_problem_ryyz"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/is_temporary_task_problem_user"
                    android:textColor="@drawable/is_temporary_task_problem_text_ryyz"
                    android:textStyle="bold"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp">
                <TextView
                    android:id="@+id/temporary_task_problem_add_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/is_temporary_task_problem_add"
                    android:gravity="center_horizontal|center_vertical"
                    android:layout_marginTop="0dp"
                    android:text="+"
                    android:textColor="@drawable/is_temporary_task_problem_text_add"
                    android:textStyle="bold"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/temporary_task_problem_framelayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </FrameLayout>
</LinearLayout>