<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_grey"
    android:orientation="vertical">
    <ScrollView style="@style/ScrollView">
    <LinearLayout
        style="@style/LinearLayout_vertical"
        android:layout_height="match_parent"

        android:background="@color/color_background_all_gray">
    <include
        android:id="@+id/check_person_toolbar"
        layout="@layout/common_toolbar" />

    <LinearLayout
        android:id="@+id/check_person_content_a"
        android:layout_below="@id/check_person_toolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/basic_information" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/is_basic_info"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_person_content_b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_person_content_a"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/solid_white_no_border"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.618">

            <ImageView
                android:id="@+id/check_person_iv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/is_contact_grey"
                android:layout_weight="4"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="拍照"
                    android:id="@+id/check_photo_1"
                    android:textColor="@color/white"
                    android:background="@drawable/is_button_grass_green_radius"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    />
                <Button
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/check_photo_2"
                    android:text="上传"
                    android:textColor="@color/white"
                    android:background="@drawable/is_button_blue_radius"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/is_name"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>

                <TextView
                    android:id="@+id/team_check_person_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_weight="2"
                    android:textSize="@dimen/small_font"
                    android:text="张三"
                    android:textColor="@color/default_text_grey_color"
                    android:singleLine="true"
                    android:paddingLeft="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/is_telephone"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/team_check_person_phone"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:text="18888888888"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/is_idcard_no"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/team_check_person_id"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/default_text_grey_color"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/small_font"
                    android:text=""
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/is_licesese_card"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/team_check_person_5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/default_text_grey_color"
                    android:text="有"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/is_tzlicesese_card"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="5dp"/>
                <TextView
                    android:id="@+id/team_check_person_6"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:textColor="@color/default_text_grey_color"
                    android:text="有"
                    android:layout_marginRight="5dp"
                    android:singleLine="true"
                    android:textSize="@dimen/small_font"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_person_content_e"
        android:layout_below="@id/check_person_content_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/id_infomation" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/is_unit_info"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/check_person_content_f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/check_person_content_e"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/solid_white_no_border"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="@string/is_partner"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/team_check_person_c"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textColor="@color/default_text_grey_color"
                android:text="中新软件沈阳分公司"
                android:paddingRight="5dp"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.618"
                android:text="@string/is_branch"
                android:gravity="center_vertical|left"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:id="@+id/team_check_person_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/default_text_grey_color"
                android:text="沈阳分公司"
                android:layout_marginRight="5dp"
                android:paddingRight="5dp"
                android:gravity="center_vertical|center_horizontal"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/check_person_content_g"
        android:layout_alignParentBottom = "true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/signature" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/is_signature"
            android:paddingTop="3dp"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/solid_white_no_border"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/check_person_content_h"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/solid_black_border"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@color/main_grey"
        android:layout_marginBottom="12dp">

        <Button
            android:id="@+id/team_check_person_create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:background="@drawable/is_button_yellow_radius"
            android:text="@string/is_pass_check"
            android:textColor="@color/white" />
        <Button
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/team_check_person_cupdate"
            android:text="@string/is_info_wait_update"
            android:textColor="@color/white"
            android:background="@drawable/is_button_blue_radius"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
        <Button
            android:id="@+id/team_check_person_cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/is_add_black_list"
            android:textColor="@color/white"
            android:background="@drawable/solid_grey_border"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"/>
    </LinearLayout>
</RelativeLayout>
