<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:padding="2dp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/is_item_team_1"
        android:gravity="left|center"
         />
    </LinearLayout>
    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:id="@+id/is_item_team_2"
        android:gravity="left|center"
        android:text="张宇飞"
        android:textSize="@dimen/large_font"
        android:textColor="@color/black_28"
        android:textStyle="bold" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/is_item_team_3"

        android:layout_weight="4"
        android:gravity="left|center"
        android:text="新力安装公司"
        android:textColor="@color/default_text_grey_color" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/is_item_team_templete_4"

        android:layout_weight="2"
        android:gravity="left|center"
        android:text="安装队长"
        android:textColor="@color/default_text_grey_color" />

</LinearLayout>
