<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/grey_solid_border"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_ele_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="150dp"
            android:text="L2"
            android:gravity="bottom|center_vertical"
            android:textColor="@color/default_text_black_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/item_ele_date_a"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="top|center_vertical"
        android:text="@string/is_submit_time"
        android:textColor="@color/default_text_grey_color"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/item_ele_date"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="top|center_vertical"
        android:text="2018/04/18"
        android:textColor="@color/default_text_grey_color"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/item_ele_date_a"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/item_ele_cusnamr_a"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="top|center_vertical"
        android:text="@string/is_process_person"
        android:textColor="@color/default_text_grey_color"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/item_ele_date"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/item_ele_cusnamr"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:gravity="top|center_vertical"
        android:text="吴轩"
        android:textColor="@color/default_text_grey_color"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/item_ele_cusnamr_a"
        android:layout_alignParentBottom="true"/>
    <TextView
        android:id="@+id/item_ele_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="厂检"
        android:textColor="@color/cardview_shadow_start_color"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:visibility="visible"/>

    <View
        android:id="@+id/civil_review_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
