                    android:textSize="20dp" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/is_elevator_handle_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/solid_white_no_border"
                android:orientation="vertical"
                android:padding="10dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/is_delivery_address"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/is_elevator_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:text=""
                        android:textColor="#969696"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/is_elevator_address_detail"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/is_elevator_address_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:text=""
                        android:textColor="#969696"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/is_install_address"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/is_elevator_install_adress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:text=""
                        android:textColor="#969696"
                        android:textSize="13sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/is_elevator_address_detail"
                        android:textColor="@color/default_text_black_color"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/is_elevator_install_adress_other"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="9"
                        android:text=""
                        android:textColor="#969696"
                        android:textSize="13sp" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_is_address_img"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/is_contact_orange" />

                <TextView
                    android:id="@+id/tv_is_contact_txt"
                    style="@style/TextView"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@+id/iv_is_address_img"
                    android:text="@string/is_contact"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="@dimen/large_font"
                    android:textStyle="bold" />

                <com.zxtech.is.widget.IconFontTextView
                    android:id="@+id/tv_open_contact_info"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:gravity="center|right"
                    android:text="@string/icon_zhe_die_close"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="20dp" />
            </RelativeLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <LinearLayout
                android:id="@+id/rv_is_contact_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/solid_white_no_border"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:scrollbars="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_is_contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    tools:listitem="@layout/item_contact_review"></android.support.v7.widget.RecyclerView>
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />


        </LinearLayout>

    </ScrollView>
</LinearLayout>
