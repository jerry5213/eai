<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/solid_white_no_border"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_project"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="易购大厦项目"

            android:gravity="bottom|center_vertical"
            android:textColor="@color/default_text_black_color"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/item_project_take"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:visibility="visible"
        android:src="@drawable/is_expend" />
    <ImageView
        android:id="@+id/item_project_selec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="19dp"
        android:visibility="gone"
        android:src="@drawable/is_select" />
    <View
        android:id="@+id/civil_review_line"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
