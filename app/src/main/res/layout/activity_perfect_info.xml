<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bg_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bf_login_bg" />

    <ImageView
        android:id="@+id/logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/bf_login_logo" />

    <TextView
        android:id="@+id/tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logo_iv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/information_improvement"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/username_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bf_username" />

                        <EditText
                            android:id="@+id/real_name_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/username_iv"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/name"
                            android:inputType="text"
                            android:imeOptions="actionNext"
                            android:maxLength="20"
                            android:maxLines="1"
                            android:nextFocusForward="@+id/et_pwd"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/default_text_grey_color"
                            android:textSize="@dimen/large_font"
                            tools:ignore="RtlSymmetry" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/real_name_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/email_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bf_email" />

                        <EditText
                            android:id="@+id/email_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/email_iv"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/default_text_grey_color"
                            android:textSize="@dimen/large_font" />


                    </RelativeLayout>

                    <View
                        android:id="@+id/email_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="46dp"
                        android:layout_marginTop="5dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp">

                        <ImageView
                            android:id="@+id/company_iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/bf_company" />

                        <EditText
                            android:id="@+id/company_et"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_toRightOf="@id/company_iv"
                            android:background="@null"
                            android:gravity="center_vertical"
                            android:hint="@string/company_name"
                            android:inputType="text"
                            android:maxLength="30"
                            android:maxLines="1"
                            android:paddingLeft="15dp"
                            android:singleLine="true"
                            android:textColor="@color/white"
                            android:textColorHint="@color/default_text_grey_color"
                            android:textSize="@dimen/large_font" />
                    </RelativeLayout>

                    <View
                        android:id="@+id/company_line"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/white" />


                    <Button
                        android:id="@+id/complete_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/button_radius"
                        android:gravity="center"
                        android:text="@string/complete_reg"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_font" />

                    <Button
                        android:id="@+id/next_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="bottom|center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/button_grey_translucent_radius"
                        android:gravity="center"
                        android:text="@string/skip"
                        android:textColor="@color/white"
                        android:textSize="@dimen/large_font" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />


            </LinearLayout>

        </ScrollView>

    </LinearLayout>
</RelativeLayout>