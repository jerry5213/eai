<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/process_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/solid_pale_red_border"
            android:paddingRight="2dp"
            android:text="土建图申请"
            android:textColor="@color/dark_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/process_tv"
            android:text="流程状态"
            android:textColor="@color/default_text_grey_color" />

        <ImageView
            android:id="@+id/file_download_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:src="@drawable/file_download" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_tv"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxWidth="130dp"
                android:text="中新科技有限公司"
                android:textColor="@color/default_text_black_color" />

            <TextView
                android:id="@+id/spec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="TJK(100012321)"
                android:textColor="@color/default_text_black_color" />

            <TextView
                android:id="@+id/create_date_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="2018/03/04"
                android:textColor="@color/default_text_black_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/draw_no_tv"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxWidth="130dp"
                android:text="TKJ-00036-001"
                android:textColor="@color/default_text_grey_color" />

            <TextView
                android:id="@+id/sale_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@color/default_text_grey_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:background="@drawable/yellow_border"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/sales_agent"
                android:textColor="@color/yellow" />

            <TextView
                android:id="@+id/compant_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="沈阳分公司"
                android:textColor="@color/default_text_grey_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/elevator_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A(井道)："
                    android:textColor="@color/default_text_grey_color" />

            </LinearLayout>

            <TextView
                android:id="@+id/elevator_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单梯"
                android:textColor="@color/default_text_grey_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出图状态："
                    android:textColor="@color/default_text_grey_color" />

                <TextView
                    android:id="@+id/draw_state_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="未发起"
                    android:textColor="@color/default_text_grey_color" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>