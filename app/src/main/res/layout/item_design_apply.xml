<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">


        <TextView
            android:id="@+id/process_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/solid_pale_red_border"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="土建图申请"
            android:textColor="@color/dark_red" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@+id/process_tv"
            android:text="流程状态"
            android:textColor="@color/default_text_grey_color" />

        <ImageView
            android:id="@+id/file_download_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:clickable="true"
            android:src="@drawable/design_draw" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_tv"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="中新科技有限公司"
                android:textColor="@color/default_text_black_color" />

            <TextView
                android:id="@+id/spec_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:maxLines="1"
                android:text="TJK(100012321)"
                android:textColor="@color/default_text_black_color" />

            <TextView
                android:id="@+id/elevator_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="TKJ"
                android:textColor="@color/default_text_black_color" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/draw_no_tv"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="TKJ-00036-001"
                android:textColor="@color/default_text_grey_color" />


            <TextView
                android:id="@+id/product_no_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="left"
                android:maxLines="1"
                android:text="沈阳分公司"
                android:textColor="@color/default_text_grey_color" />

            <TextView
                android:id="@+id/create_date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-04-05"
                android:textColor="@color/default_text_grey_color" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/elevator_tv"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="A(井道)："
                android:textColor="@color/default_text_grey_color" />


            <LinearLayout
                android:layout_width="110dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/sale_user_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin"
                    android:textColor="@color/default_text_grey_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/yellow_border"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="销售"
                    android:textColor="@color/yellow" />
            </LinearLayout>

            <TextView
                android:id="@+id/compant_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxWidth="100dp"
                android:gravity="right"
                android:layout_marginLeft="5dp"
                android:text="中新科技有限公司"
                android:textColor="@color/default_text_grey_color" />



        </LinearLayout>

    </LinearLayout>


</LinearLayout>