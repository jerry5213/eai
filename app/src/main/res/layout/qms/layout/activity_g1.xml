<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_toolbar" />

    <RelativeLayout
        android:id="@+id/graph1_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="128dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/g1title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="27dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/graph1_par1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="51dp"
            android:layout_marginTop="62dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/graph1_par1_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/graph1_par1"
            android:layout_marginStart="116dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/graph1_par2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/graph1_par1"
            android:layout_marginEnd="124dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/graph1_par2_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/graph1_par1"
            android:layout_marginEnd="36dp"
            android:text="TextView" />


        <com.github.mikephil.charting.charts.HorizontalBarChart
            android:id="@+id/hbr1"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="97dp"></com.github.mikephil.charting.charts.HorizontalBarChart>
    </RelativeLayout>
</LinearLayout>