<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <TextView
        android:id="@+id/tv_qms_question_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="问题多岁的"
        android:textColor="@color/default_text_black_color"
        android:textSize="@dimen/middle_font" />

    <TextView
        android:id="@+id/tv_qms_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="大手大脚速度快圣诞节开始的健康四大皆空"
        android:textColor="@color/default_text_grey_color"
        android:textSize="@dimen/small_font" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

</LinearLayout>