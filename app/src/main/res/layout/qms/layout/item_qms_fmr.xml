<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_vertical"
    android:layout_marginTop="5dp"
    android:background="@drawable/solid_white_no_border"
    android:padding="10dp">

    <LinearLayout style="@style/LinearLayout_horizontal">

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/TextView"
                android:text="反馈原因："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_reason"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/TextView"
                android:gravity="center_horizontal"
                android:text="发生频率："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_frequency"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        style="@style/LinearLayout_horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1">

            <TextView
                style="@style/TextView"
                android:text="严重度："
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_severity"
                style="@style/TextView"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textSize="13sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>