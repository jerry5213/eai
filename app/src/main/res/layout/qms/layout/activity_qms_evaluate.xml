<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_vertical"
    android:layout_height="match_parent"
    android:background="@color/color_background_all_gray">

    <include layout="@layout/common_toolbar" />

    <LinearLayout
        style="@style/LinearLayout_vertical"
        android:layout_margin="7dp"
        android:background="@drawable/solid_white_no_border"
        android:padding="10dp"
        android:paddingTop="10dp">

        <LinearLayout style="@style/LinearLayout_horizontal">

            <TextView
                style="@style/TextView"
                android:layout_width="100dp"
                android:text="物料到货时间"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_materiel_arrival_time"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:background="@drawable/bg_round_border"
                android:textColor="@color/default_text_black_color"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/TextView"
                android:layout_width="100dp"
                android:text="整改完成时间"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_rectify_finish_time"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:background="@drawable/bg_round_border"
                android:textColor="@color/default_text_black_color"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/TextView"
                android:layout_width="100dp"
                android:text="解决情况"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_qms_solve"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/solid_white_border"
                android:drawableRight="@drawable/down"
                android:gravity="center_vertical"
                android:hint="请选择"
                android:padding="5dp"
                android:textColorHint="@color/default_text_grey_color"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/TextView"
                android:layout_width="100dp"
                android:text="满意度打分"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <RatingBar
                android:id="@+id/rating_bar_qms"
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5" />

        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayout_horizontal"
            android:layout_marginTop="15dp">

            <TextView
                style="@style/TextView"
                android:layout_width="100dp"
                android:text="详细评价"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/et_qms_detail_evaluate"
                style="@style/EditText"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_round_border"
                android:gravity="top"
                android:textColor="@color/default_text_black_color"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_qms_submit"
        style="@style/Button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_main_radius"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/middle_font" />

</LinearLayout>