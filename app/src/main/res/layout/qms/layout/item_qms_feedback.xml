<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_vertical"
    android:layout_width="match_parent"
    android:background="@color/color_background_white"
    android:gravity="center_vertical"
    android:padding="10dp">

    <LinearLayout
        style="@style/LinearLayout_horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_weight="1"
            android:src="@drawable/shape_circle" />

        <TextView
            android:id="@+id/tv_qms_order_no"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_qms_question_desc"
            style="@style/TextView"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout style="@style/RelativeLayout"
        android:layout_marginTop="10dp">



        <TextView
            android:id="@+id/tv_qms_look"
            style="@style/TextView"
            android:layout_width="60dp"
            android:background="@drawable/solid_main_border"
            android:gravity="center_horizontal"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="查看"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_qms_logistics"
            style="@style/TextView"
            android:layout_width="60dp"
            android:background="@drawable/yellow_border"
            android:gravity="center_horizontal"
            android:layout_toLeftOf="@id/tv_qms_look"
            android:layout_marginRight="10dp"
            android:text="物流"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_qms_evaluate"
            style="@style/TextView"
            android:layout_width="60dp"
            android:background="@drawable/blue_border"
            android:layout_toLeftOf="@id/tv_qms_logistics"
            android:layout_marginRight="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="评价"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>



</LinearLayout>