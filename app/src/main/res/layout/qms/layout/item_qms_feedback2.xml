<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LinearLayout_vertical"
    android:layout_width="match_parent"
    android:background="@color/color_background_white"
    android:gravity="center_vertical"
    android:padding="10dp">

    <LinearLayout
        style="@style/LinearLayout_horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/shape_circle" />

        <Space
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_qms_order_no"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:text="1802050065"
            android:minWidth="90dp"
            android:textColor="@color/default_text_black_color"
            android:textSize="14sp" />

        <Space
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_qms_support_type"
            style="@style/TextView"
            android:layout_width="wrap_content"
            android:text="物料支持"
            android:minWidth="70dp"
            android:textColor="@color/default_text_black_color"
            android:textSize="14sp" />

        <Space
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/time"
            style="@style/TextView"
            android:layout_width="80dp"
            android:text="2018-03-10"
            android:textColor="@color/default_text_black_color"
            android:textSize="14sp" />

        <Space
            android:layout_width="@dimen/dp_10"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/status"
                style="@style/TextView"
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_yellow_radius"
                android:paddingBottom="2dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:text="已提交"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        style="@style/RelativeLayout"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/tv_qms_content"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_text_grey_color"
            android:text="现质监局要求2016年7月后出厂的电梯合格证需要添加层门高度电话号就觉得" />

        <TextView
            android:id="@+id/tv_qms_contract_no"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qms_content"
            android:textColor="@color/default_text_grey_color"
            android:text="合同号" />

        <TextView
            android:id="@+id/tv_qms_project_name"
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qms_contract_no"
            android:textColor="@color/default_text_grey_color"
            android:text="项目名称" />

        <TextView
            style="@style/TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_qms_project_name"
            android:textColor="@color/default_text_grey_color"
            android:text="物料名称" />

        <!--<TextView
            android:id="@+id/tv_qms_look"
            style="@style/TextView"
            android:layout_width="60dp"
            android:background="@drawable/shape_tv_blue"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:text="查看"
            />-->

        <TextView
            android:id="@+id/tv_qms_logistics"
            style="@style/TextView"
            android:layout_width="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/button_main_radius"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="跟 踪"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_qms_evaluate"
            style="@style/TextView"
            android:layout_width="60dp"
            android:layout_alignParentBottom="true"
            android:layout_toStartOf="@id/tv_qms_logistics"
            android:background="@drawable/bg_round_border"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_horizontal"
            android:text="评 价"
            android:textColor="@color/main"
            android:textSize="14sp" />

    </RelativeLayout>


</LinearLayout>