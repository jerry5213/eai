                     />
             </RelativeLayout>

             <View
                 android:layout_width="match_parent"
                 android:layout_height="1px"
                 android:background="@color/line" />-->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/item_height"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="@dimen/page_padding"
                android:paddingRight="@dimen/page_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/detailed_address"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="@dimen/middle_font" />

                <EditText
                    android:id="@+id/customerAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:gravity="right"
                    android:hint="@string/required"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textColorHint="@color/line"
                    android:textSize="@dimen/middle_font" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <EditText
                    android:id="@+id/customerRelationship"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/circle_corner_button"
                    android:gravity="top|left"
                    android:hint="@string/customer_relationship"
                    android:maxLines="5"
                    android:padding="5dp"
                    android:textColor="@color/default_text_grey_color"
                    android:textSize="@dimen/middle_font" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/button_main_radius"
                android:gravity="center"
                android:text="@string/save"
                android:textColor="@color/white"
                android:textSize="@dimen/middle_font" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>