<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/tv_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/yellow_border"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="大项目"
            android:textColor="@color/yellow"
            android:textSize="@dimen/small_font" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_no"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:maxWidth="130dp"
                android:text="ZX2018-01"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/project_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="中新科技有限公司"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/create_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:maxLines="1"
                android:text="2018/03/04"
                android:textSize="@dimen/middle_font" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/salesman_name"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxWidth="130dp"
                android:text="TKJ-00036-001"
                android:textColor="@color/default_text_grey_color"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/branch_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Admin"
                android:textColor="@color/default_text_grey_color"
                android:textSize="@dimen/middle_font" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>