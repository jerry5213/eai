<?xml version="1.0" encoding="utf-8"?>
<com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:paddingBottom="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_project_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_border"
            android:text="大项目"
            android:textColor="@color/yellow"
            android:textSize="@dimen/small_font" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/project_no"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxWidth="130dp"
                android:maxLines="1"
                android:text="ABC"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/project_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="GT 2017-0004  万科广场"
                android:textColor="@color/default_text_black_color"
                android:textSize="@dimen/middle_font" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/customer_tv"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="张晓菲"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/salesman_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="沈阳分公司"
                android:textSize="@dimen/middle_font" />

            <TextView
                android:id="@+id/branch_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="2017-09-10"
                android:textSize="@dimen/middle_font" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/close_btn"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:background="@color/yellow"
        android:text="关闭"
        android:textColor="@android:color/white" />

</com.mcxtzhang.swipemenulib.SwipeMenuLayout>