<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/group_layout"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <LinearLayout
        android:id="@+id/select_layout"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/select_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/match" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/itemNo_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="itemNo"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/elevator_number_tv"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/wbs_tv"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/one_contract_price_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:textColor="@color/default_text_black_color" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/plan_amount_collected_tv"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/plan_rate_collected_tv"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/allot_money_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

    <TextView
        android:id="@+id/total_allot_money_tv"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:textColor="@color/default_text_black_color" />

    <View
        android:layout_width="@dimen/line"
        android:layout_height="match_parent"
        android:background="@color/line" />

</LinearLayout>