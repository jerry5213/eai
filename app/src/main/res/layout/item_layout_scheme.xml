<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="5dp">

    <TextView
        android:id="@+id/scheme_no_tv"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_yellow_radius"
        android:paddingBottom="2dp"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:text="方案 1"
        android:textColor="@color/white"
        android:textSize="@dimen/small_font" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/scheme_no_tv"
        android:layout_below="@+id/scheme_no_tv">


        <android.support.v7.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="电梯型号："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/elevator_model_tv"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="HDBDK8527"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="轿厢尺寸："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:id="@+id/card_size_tv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1500*2000"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="载重："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="轿厢高度："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2400"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="速度："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="轿门尺寸："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1500*2000"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="入口："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="顶层高度："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="4000"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="开门方式："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="65dp"
                        android:layout_height="wrap_content"
                        android:text="厅门门套："
                        android:textSize="@dimen/small_font" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="大门套"
                        android:textSize="@dimen/small_font" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <ImageView
            android:id="@+id/status_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:src="@drawable/download" />
    </FrameLayout>
</RelativeLayout>