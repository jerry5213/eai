<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/iv_course"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >
            <TextView
                android:id="@+id/tv_coursename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="课程名"
                android:textSize="13dp"
                android:textColor="@color/default_text_black_color"
                android:paddingBottom="5dp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <!--<TextView
                android:id="@+id/tv_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text=""
                android:textSize="10dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/white"
                />-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_praise"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/default_text_black_color"
                    />
                <TextView
                    android:id="@+id/tv_praise_val"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:text="0"
                    />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@color/default_text_black_color"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/tv_comment_val"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:textSize="13dp"
                    android:gravity="center"
                    android:textColor="@android:color/darker_gray"
                    android:text="0"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginRight="10dp"
            >
            <TextView
                android:id="@+id/tv_open"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:textColor="@color/default_text_black_color"
                android:background="@drawable/circle_corner_button_selector"
                android:text="@string/study"
                android:layout_marginTop="10dp"
                android:textSize="10dp"
                />
            <TextView
                android:id="@+id/tv_score"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="5dp"
                android:textSize="10dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/border_color"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
</LinearLayout>