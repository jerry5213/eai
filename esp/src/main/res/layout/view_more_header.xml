<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_head"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/owner_photo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_toRightOf="@id/owner_photo"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/owner_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Martin L"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:id="@+id/iv_pen"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/ic_pen"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center"
                android:textColor="@color/default_text_black_color"
                android:background="@drawable/circle_corner_button"
                android:layout_toRightOf="@id/owner_photo"
                android:layout_above = "@id/owner_line"
                android:layout_marginBottom="15dp"
                android:textSize="10dp"
                android:text="初级安装工IV级"
                android:visibility="gone"
                />

            <View
                android:id="@+id/owner_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@id/owner_photo"
                android:background="@color/border_color" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_ranking"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/ranking"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="11dp"
                    />

                <TextView
                    android:id="@+id/tv_rank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textSize="11dp"
                    android:textColor="@color/text_color_gray_light" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/border_color" />

            <LinearLayout
                android:id="@+id/ll_exam"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/test"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="11dp"
                    />

                <TextView
                    android:id="@+id/tv_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="11dp"
                    android:textColor="@color/text_color_gray_light" />

            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="30dp"
                android:background="@color/border_color" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="@string/my_news"
                    android:textColor="@color/default_text_black_color"
                    android:textSize="11dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="11dp"
                    android:textColor="@color/text_color_gray_light" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/main_grey" />
    </LinearLayout>
</LinearLayout>