<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="top"
    android:background="@drawable/shape_border_whitebg_5dip"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="1px" >
	<!-- 标题 -->
    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:gravity="center"
        android:text="title"
        android:textColor="#0075c2"
        android:textSize="14sp"
        android:visibility="visible"
        android:background="@drawable/shape_com_dialog_title" />

    <!--内容-->
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/message"
			android:text="msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:minHeight="60.0dip"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

<!--     <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:layout_marginTop="70dp"
        android:background="#ffd0d0d0" /> -->

<!-- 按钮 -->
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:background="@drawable/shape_com_dialog_buttom"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="80.0dip"
            android:layout_height="30.0dip"
            android:background="@drawable/button_blue_radius"
            android:layout_centerInParent="true"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"
            android:textSize="14sp" />

        <!--<Button
            android:id="@+id/negativeButton"
            android:layout_width="80.0dip"
            android:layout_height="35.0dip"
            android:layout_marginLeft="30.0dip"
            android:background="@drawable/button_darkgray_radius"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="取消"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />-->
    </RelativeLayout>

</LinearLayout>