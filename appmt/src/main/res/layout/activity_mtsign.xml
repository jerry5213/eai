<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/rate_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/grey"
        android:dividerHeight="1px" />

    <LinearLayout
        android:id="@+id/sign_layout"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="200dp"
        android:layout_marginTop="@dimen/default_margin_top"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:layout_marginLeft="@dimen/default_margin_left"
        android:layout_marginRight="@dimen/default_margin_left"
        android:background="@drawable/bg_round_border"
        android:orientation="vertical">


    <TextView
        android:id="@+id/sign_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign"/>
        <ImageView
            android:id="@+id/sign_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/default_margin_top"
        android:layout_marginBottom="@dimen/default_margin_bottom"
        android:layout_marginLeft="@dimen/default_margin_left"
        android:layout_marginRight="@dimen/default_margin_left"
        android:background="@drawable/bg_round_border"
        android:layout_height="100dp">
            <EditText
                android:id="@+id/result_edittext"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:textSize="14sp"
                android:gravity="top"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="3dp"
                android:hint="@string/suggest$"/>


        </LinearLayout>


</LinearLayout>